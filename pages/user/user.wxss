/* pages/user/user.wxss */

/* ==========页面头部 BEGIN========== */

.head {
  position: relative;
  height: 250rpx;
  background: #ff7f50;
}

.head-img, .head-text {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.head-img {
  right: 200rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 45%;
}

.head-text {
  left: 200rpx;
  color: #fff;
}

/* ==========菜单列表 BEGIN========== */

.list {
  margin-top: 8px;
  background: #fff;
}

.list-nav {
  position: relative;
  padding: 30rpx 40rpx;
}

.list-nav:not(:first-child)::before {
  position: absolute;
  top: 0;
  left: 50%;
  width: 90%;
  content: "";
  border-top: 1px solid #ccc;
  transform: translateX(-50%);
}

.list-nav > text::after {
  position: absolute;
  right: 50rpx;
  color: #888;
  content: "\27e9";
}
