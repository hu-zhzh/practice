/* pages/search/search.wxss */
@import '../../template/search.wxss';

page > view {
  padding: 0 20rpx;
  margin-bottom: 16rpx;
  background: #fff;
}

/* ==========顶部搜索 BEGIN========== */

.search {
  display: flex;
  align-items: center;
}

.search-cont, .search-input {
  flex: auto;
}

.search > .btn {
  height: 2rem;
  margin-left: 30rpx;
}

.cancel-btn {
  border: 1px solid #b2b2b2;
}

.search-btn {
  color: #fff;
  background: #ff7f50;
}

/* ==========历史搜索 BEGIN========== */

.history > .head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
}

.history > .head > .title {
  font-weight: bold;
}

.history > .content {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  min-height: 80rpx;
  padding: 30rpx 0;
  color: #888;
}

.history > .content > .text {
  padding: 0 20rpx;
  margin: 0 30rpx 20rpx 0;
  font-size: 28rpx;
  line-height: 42rpx;
  background: #ededed;
  border-radius: 21rpx;
}

/* ==========搜索结果 BEGIN========== */

.result {
  padding: 0;
}

.item-wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.item {
  width: 350rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 2px 3px rgba(0, 0, 0, 0.2);
}

.item-img {
  width: 100%;
  height: 350rpx;
  background: #b2b2b2;
}

.item-cont {
  padding: 10rpx;
}

.goods-name {
  width: 330rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-info > text {
  margin-right: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #888;
}

.goods-info > .price {
  font-size: 1rem;
  color: #f00;
}

.goods-info > .cost_price {
  text-decoration: line-through;
}
