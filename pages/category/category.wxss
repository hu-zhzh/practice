/* pages/category/category.wxss */
@import "../../template/search.wxss";

/* ==========商品分类 BEGIN========== */

.category {
  display: flex;
  height: 100%;
}

.category > .c1 {
  width: 160rpx;
  min-width: 160rpx;
}

.c1-item {
  padding: 20rpx 0 20rpx 20rpx;
}

.c1 > .active {
  color: #ff7f50;
  background: #fff;
  border-left: 10rpx solid #ff7f50;
}

.category > .c2 {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
}

.c2-item {
  width: 180rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.c2 .item-img {
  width: 128rpx;
  height: 128rpx;
  background: #b2b2b2;
}
